@model MatchedBetsTracker.Models.BrokerAccount
@{
    ViewBag.Title = "New";
}

<h2>New Broker Account</h2>

@using (Html.BeginForm("Create", "BrokerAccount"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextAreaFor(m => m.Name, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextAreaFor(m => m.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.TextAreaFor(m => m.Password, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IntialAmount)
        @Html.TextAreaFor(m => m.IntialAmount, new { @class = "form-control" })
    </div>
}

