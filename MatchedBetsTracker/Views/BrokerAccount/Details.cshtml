@model MatchedBetsTracker.ViewModels.BrokerAccountDetailsViewModel
    
<h1>@Html.ActionLink(Model.BrokerAccount.Name, "Edit", "BrokerAccount", new { Id = Model.BrokerAccount.Id }, null)</h1>

<h2>Transactions</h2>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Date</th>
        <th>Type</th>
        <th>Amount</th>
        <th>Bet</th>
        <th>Validated</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var transaction in Model.Transactions)
    {
        <tr>            
            <td>@Html.ActionLink(transaction.Id.ToString(), "Edit", "Transaction", new { Id = transaction.Id }, null)</td> 
            <td>@transaction.Date</td>
            <td>@transaction.TransactionType.TransactionDescription</td>
            <td>@transaction.Amount</td>
            <td>
                @if (transaction.BetId != null)
                {
                    @Html.ActionLink(transaction.Bet.EventDescription, "Edit", "Bet", new { Id = transaction.Bet.Id }, null);
                }
            </td>
            <td>@transaction.Validated</td>
        </tr>
    }
    </tbody>
</table>