@model MatchedBetsTracker.ViewModels.BrokerAccountDetailsViewModel
    
<h1>@Model.BrokerAccount.Name</h1>

<h2>Transactions</h2>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Amount</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var transaction in Model.Transactions)
    {
        <tr>            
            <td>@transaction.Date</td>
            <td>@transaction.TransactionTypeId</td>
            <td>@transaction.Amount</td>
        </tr>
    }
    </tbody>
</table>