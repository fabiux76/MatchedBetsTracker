@using MatchedBetsTracker.Models
@model MatchedBetsTracker.Models.MatchedBet
@{
    ViewBag.Title = "Details";
}

<h2>Matched Bet</h2>

<p>
    @Html.ActionLink("Delete Matched Bet (including bets and transactions)", "Delete", "MatchedBet", new { id = Model.Id }, new { @class = "btn btn-primary" })
</p>

@if (Model.Status == MatchedBetStatus.Open)
{
    <p>
        @Html.ActionLink("Back Won (puntata)", "Close", "MatchedBet", new {id = Model.Id, status = MatchedBetsTracker.Models.MatchedBetStatus.BackWon}, new {@class = "btn btn-primary"})
    </p>

    <p>
        @Html.ActionLink("Lay Won (bancata)", "Close", "MatchedBet", new {id = Model.Id, status = MatchedBetsTracker.Models.MatchedBetStatus.LayWon}, new {@class = "btn btn-primary"})
    </p>
}
else
{
    <p>
        @Html.ActionLink("ReOpen Bet", "ReOpen", "MatchedBet", new { id = Model.Id}, new { @class = "btn btn-primary" })
    </p>
}

<h3>Bets</h3>
@Html.Partial("_Bets", Model.Bets.OrderBy(b => b.BetDate))

<h3>Transactions</h3>
@Html.Partial("_Transactions", Model.Bets.SelectMany(bet => bet.Transactions.OrderBy(t => t.Date)))

@section scripts
{
    @Scripts.Render("~/bundles/mycode")
}
