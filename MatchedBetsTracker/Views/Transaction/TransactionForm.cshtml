@model MatchedBetsTracker.ViewModels.TransactionFormViewModel

@{
    ViewBag.Title = "New";
}

<h2>New Transaction</h2>

@using (Html.BeginForm("Save", "Transaction"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Transaction.BrokerAccountId)
        @Html.DropDownListFor(m => m.Transaction.BrokerAccountId, new SelectList(Model.BrokerAccounts, "Id", "Name"), "Select Brocker", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Transaction.Date)
        @Html.TextBoxFor(m => m.Transaction.Date, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
    </div>
   
    <div class="form-group">
        @Html.LabelFor(m => m.Transaction.TransactionTypeId)
        @Html.DropDownListFor(m => m.Transaction.TransactionTypeId, new SelectList(Model.TransactionTypes, "Id", "TransactionDescription"), "Select Transaction Type", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Transaction.Amount)
        @Html.TextBoxFor(m => m.Transaction.Amount, new { @class = "form-control" })
    </div>

    <div class="form-group form-check">
        @Html.CheckBoxFor(m => m.Transaction.Validated, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.Transaction.Validated, new { @class = "form-check-label" })
    </div>

    @Html.HiddenFor(m => m.Transaction.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}

