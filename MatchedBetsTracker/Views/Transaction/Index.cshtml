@model IEnumerable<MatchedBetsTracker.Models.Transaction>
@{
    ViewBag.Title = "Index";
}

<h2>Transactions</h2>

<p>
    @Html.ActionLink("New Transactions", "New", "Transaction", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Broker</th>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Validated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>        
                <td>@Html.ActionLink(transaction.Id.ToString(), "Edit", "Transaction", new { Id = transaction.Id }, null)</td>       
                <td>@transaction.BrokerAccount.Name</td>
                <td>@transaction.Date</td>
                <td>@transaction.TransactionType.TransactionDescription</td>
                <td>@transaction.Amount</td>
                <td>@transaction.Validated</td>
            </tr>
        }
    </tbody>
</table>